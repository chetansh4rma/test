# Production Environment Configuration Template
# Copy this to .env in your production environment and fill in the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-here-change-this

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://epic.com,https://fhir.epic.com

# Client Redirect URL (where users go after OAuth)
CLIENT_REDIRECT_URL=https://yourdomain.com/fhir

# Logging
LOG_LEVEL=INFO
